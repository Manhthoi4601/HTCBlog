<div class="wrapper">
    <div class="body-overlay"></div>
    {{> admin-sidebar}}
    <div id="content" class="bg-light">
        {{> admin-header}}
        <section class="px-lg-5 mx-lg-5">
            <div class=" mx-auto container-fluid shadow-sm rounded bg-white">
                {{!-- --}}
                <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom ">
                    <h2 class="mr-md-auto font-weight-bold">Chỉnh Sửa Bài Viết</h2>
                    <a class="my-4 btn btn-warning" href="/news/create"> <i class="fa-solid fa-pen-to-square"></i> Viết
                        Bài</a>
                </div>
                <br>
                {{!-- --}}
                <div class="card-body form-custom">
                    <form method="post" action="/news/{{{news._id}}}/update/?Method=POST" enctype="multipart/form-data">
                        <div class="form-row d-flex justify-content-center">
                            {{!-- --}}
                            <div class="form-group col-md-5 mx-auto">

                                <div class="form-group">
                                    <label for="name">Tiêu Đề</label>
                                    <textarea class="form-control" value="{{news.name}}" id="name" name="name"
                                        required>{{news.name}}</textarea>
                                </div>

                                <div class="form-group">
                                    <label for="description">Danh Mục</label>
                                    <select name="categories" id="categories" class="form-control" required>
                                        {{#each category}}
                                        <option value="{{this._id}}">
                                            {{this.name}}
                                        </option>
                                        {{/each}}
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label for="description">Ảnh</label>
                                    <br>
                                    <input class="preview-Img form-control" type="file" value="{{news.image}}"
                                        accept="image/*" id="avatar" name="avatar" required  onchange="loadFile(event)"/>
                                    <div class=" py-3 d-flex justify-content-center">
                                        <img class="img-fluid " id="output" src="/public/img/{{news.image}}"
                                            alt="{{news.image}}" />
                                    </div>
                                </div>

                            </div>
                            {{!-- --}}

                            <div class="form-group col-md-7 pl-md-5">

                                <div class="form-group">
                                    <label for="description">Mô Tả</label>
                                    <textarea class="form-control" value="{{news.description}}" id="description"
                                        name="description" required>{{news.description}}</textarea>
                                </div>

                                <div class="form-group">
                                    <label for="content">Nội Dung</label>
                                    <textarea class="form-control ckeditor" rows="14" id="editor" name="content"
                                        value="{{news.content}}" required>{{news.content}}</textarea>
                                </div>
                                <div class="form-row  d-flex justify-content-center ">
                                    <div class="form-group my-3">
                                        <button type="submit" class="btn btn-success px-4 custom-btn">
                                            <i class="fa-solid fa-arrows-rotate mr-2"></i>
                                            Cập Nhật
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </section>
        {{>footer}}
    </div>
</div>