<section class="login vh-100">
  <div class="container py-2 h-100">
    <div class="row d-flex justify-content-center  h-100 mx-3 ">
      <div class=" col-lg-5 col-md-6 col-sm-12 ">
        {{#if message}}
        <div class="alert alert-success">{{message}}</div>
        {{/if}}


        <div class="col-lg-12 login_wrapper mx-auto">
          <header>HTC Blogs</header>
          <form id="register" method="POST" action="register/store" class="px-4">
            <!-- User id input -->
            <div class="form-outline mb-3">
              <label class="form-label">Tên người dùng</label>
              <input type="text" placeholder="UserID" name="userId" required class="form-control"
                placeholder="Enter a User ID" />
            </div>

            <!-- Email input -->
            <div class="form-outline mb-3">
              <label class="form-label">Email </label>
              <input type="email" placeholder="Email" name="email" required class="form-control"
                placeholder="Enter a valid email address" />
            </div>

            <!-- Password input -->
            <div class="form-outline mb-3">
              <label class="form-label" for="form3Example4">Mật khẩu</label>
              <input type="password" placeholder="Enter Password" name="confirmpassword" required class="form-control"
                placeholder="Enter password" />
            </div>

            <div class="text-center text-lg-start mt-4 pt-2">
              <button type="submit" class="btn btn-dark w-100 my-2">Đăng ký</button>
              <p class="small fw-bold mt-2 pt-1 mb-0">
                Bạn đã có tài khoản ?
                <a href="/login" class="link-danger">Đăng nhập</a>
              </p>
            </div>
          </form>
        </div>

      </div>
      <div class="col-lg-5 col-md-6 col-sm-12 py-4">
        <img class="rounded" src="https://static.cdninstagram.com/rsrc.php/v3/yr/r/fzBXVxs22bH.png" alt="">
      </div>
    </div>
  </div>
</section>

