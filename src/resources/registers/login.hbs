<div class="header__top">
  <div class="container">
    <div class="row">
      <div class="col-lg-6">
        <div class="header__top__left">
          <ul>
            <li><i class="fa fa-envelope"></i> <a href="/">htcblog@gmail.com</a></li>
          </ul>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="header__top__right">
          <div class="header__top__right__social">
            <a href="#"><i class="fa-brands fa-facebook-f"></i></a>
            <a href="#"><i class="fa-brands fa-twitter"></i></a>
            <a href="#"><i class="fa-brands fa-telegram"></i></i></a>
            <a href="#"><i class="fa-brands fa-youtube"></i></a>
          </div>
          <div class="header__top__right__auth">
            <a href="/login"><i class="fa fa-user"></i></a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<section class="login vh-100">
  <div class="container py-2 h-100 ">
    <div class="row d-flex justify-content-center align-items-center h-100 mx-3">
      <div class="row d-flex justify-content-center">
        <div class="col-lg-5 col-md-6 col-sm-12 py-4">
          <img class="rounded" src="https://static.cdninstagram.com/rsrc.php/v3/yr/r/fzBXVxs22bH.png" alt="">
        </div>
        <div class="col-lg-5 col-md-6 col-sm-12 py-4">
          {{#if message}}
          <div class="alert alert-warning" style="width: 350px;">{{message}}</div>
          {{/if}}
          <div class="col-lg-12 login_wrapper mx-auto">
            <header>HTC Blogs</header>
            <form action="login/log" id="login" method="POST" class="px-4">
              <!-- Email input -->
              <div class="form-outline mb-3">
                 <label class="form-label">Email</label>
                <input type="email" name="email" required class="form-control" />
              </div>
              <!-- Password input -->
              <div class="form-outline mb-3">
                <label class="form-label">Mật khẩu</label>
                <input type="password" name="password" required class="form-control " />
              </div>
              <div class="text-center text-lg-start mt-4 py-3">
                <button type="submit" class="btn btn-dark w-100 py-2" onclick="">Đăng nhập</button>
              </div>

            </form>
          </div>
          <div class="col-lg-12 text-center login_wrapper my-3 mx-auto">
            <p class="small fw-bold mt-3 pt-1 mb-2">Bạn chưa có tài khoản ?
              <a href="/register" class="link-danger">Đăng ký</a>
            </p>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>
{{> footer}}